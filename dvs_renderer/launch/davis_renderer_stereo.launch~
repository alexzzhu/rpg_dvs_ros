<?xml version="1.0" encoding="ISO-8859-15"?>

<launch>  
  <!-- DVS drivers -->
  <include file="$(find davis_ros_driver)/launch/stereo.launch" />

  <!-- visualization -->
  <node ns="davis" name="davis_renderer_left" pkg="dvs_renderer" type="dvs_renderer">
    <param name="display_method" value="red-blue"/>
    <remap from="events" to="dvs/left/events"/>
    <remap from="dvs_rendering" to="dvs/left/image_raw" />
    <remap from="camera_info" to="left/dvs/camera_info"/>
  </node>
  
  <node ns="davis" name="davis_renderer_right" pkg="dvs_renderer" type="dvs_renderer">
    <param name="display_method" value="red-blue"/>
    <remap from="events" to="dvs/right/events" />
    <remap from="dvs_rendering" to="dvs/right/image_raw" />
    <remap from="camera_info" to="right/dvs/camera_info"/>
  </node>
  
  <node pkg="stereo_image_proc" type="stereo_image_proc" name="dvs_stereo_image_proc" ns="davis/dvs" output="screen" required="true"/>
  
  <!-- display -->
  <node name="image_view_left" pkg="image_view" type="image_view">
  	<remap from="image" to="/davis/dvs/left/image_rect"/>
  </node>
  
  <node name="image_view_right" pkg="image_view" type="image_view">
  	<remap from="image" to="/davis/dvs/right/image_rect"/>
  </node>
  
</launch>
